{
  "name": "functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for GenLink",
  "scripts": {
    "lint": "eslint .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^7.0.1",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/uuid": "^9.0.8",
    "eslint": "^9.0.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.0.0"
  },
  "private": true
}
