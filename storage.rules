rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload files to their own user folder
    match /users/{userId}/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Organization files (logos, documents, etc.)
    match /organizations/{orgId}/{allPaths=**} {
      allow read: if true; // Public read access for organization assets
      allow write: if request.auth != null; // Only authenticated users can upload
    }

    // Challenge-related files
    match /challenges/{challengeId}/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Authenticated users can upload submissions
    }

    // Team files
    match /teams/{teamId}/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if request.auth != null;
    }

    // Public assets (logos, images, etc.)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}

